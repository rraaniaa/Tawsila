<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg1"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Icon for Participation ID -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/car_crash_24"
                android:contentDescription="@string/participation_id_icon" />

            <TextView
                android:id="@+id/participationIDTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Participation ID: "
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"/>

            <!-- Repeat the same structure for other details with respective icons -->

            <TextView
                android:id="@+id/departTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carpooling ID: "
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="32dp"/>
            <TextView
                android:id="@+id/destinationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carpooling ID: "
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="32dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <!-- Add Accept Button -->

                <!-- Add Delete Button -->




                <TextView
                    android:id="@+id/etatTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Etat: "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/acceptButton"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Accept"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorGreen"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="80dp"

                    android:text="Delete"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
